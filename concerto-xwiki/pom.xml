<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.concerto</groupId>
    <artifactId>concerto</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <artifactId>concerto-xwiki</artifactId>
  <packaging>pom</packaging>
  <name>XWiki Concerto - XWiki modules - Parent POM</name>
  <description>Parent project for all Concerto-related XWiki components</description>
  <modules>
    <!-- XWiki for Concerto modules -->
    <module>xwootManager-component</module>
    <module>xwootManager-application</module>
    <module>wiki</module>
    <module>database</module>
  </modules>
  <properties>
    <!-- Versions of XWiki dependencies used in Concerto modules -->
    <platform.tool.xar-handler.version>1.8</platform.tool.xar-handler.version>
    <platform.tool.xar-plugin.version>1.10</platform.tool.xar-plugin.version>
    <platform.tool.configuration.version>1.14</platform.tool.configuration.version>
    <platform.tool.jetty.version>1.10</platform.tool.jetty.version>
    <platform.tool.packager.version>1.10</platform.tool.packager.version>
    <platform.tool.test.version>1.11</platform.tool.test.version>
    <platform.core.version>1.5.2</platform.core.version>
    <platform.web.version>1.5.2</platform.web.version>
    <product.enterprise.version>1.5.2</product.enterprise.version>
  </properties>
  <build>
    <extensions>
      <extension>
        <groupId>com.xpn.xwiki.platform.tools</groupId>
        <artifactId>xwiki-xar-handlers</artifactId>
        <version>${platform.tool.xar-handler.version}</version>
      </extension>
    </extensions>
    <plugins>
      <plugin>
        <groupId>com.xpn.xwiki.platform.tools</groupId>
        <artifactId>xwiki-xar-plugin</artifactId>
        <version>${platform.tool.xar-plugin.version}</version>
      </plugin>
    </plugins>
  </build>
</project>
